#include <iostream>
#include<stdlib.h>
using namespace std;

int main() 
 {
   int n,i,pass,j,a[10],temp;
   clrscr();
   cout<<"Enter total numbers\n";
   cin>>n;
   cout<<"Enter the numbers....\n ";

   for(i=0;i<n;i++)
      {
       cout<<"Enter the number at position"<<i+1;
       cin>>a[i];   
      }

   for(pass=0;pass<n-1;pass++)
    {
      for(j=0;j<n-pass-1;j++)
       {

	if(a[j]>a[j+1])
	 {
	   temp=a[j];
	   a[j]=a[j+1];
	   a[j+1]=temp;
	}
      }
   }
   cout<<"The sorted numbers....\n";
   for(i=0;i<n;i++)
     cout << a[i] << " "; 
   }

